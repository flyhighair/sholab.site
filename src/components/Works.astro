---
import Work from './Work.astro';

interface WorkInfo {
  link: string;
  imgSrc: string;
  imgAlt: string;
  title: string;
}

const workList: WorkInfo[] = [
  {
    link: '/work/hoge',
    imgSrc: '/assets/works/portfolio.png',
    imgAlt: 'このサイトのスクリーンショット',
    title: 'このサイト',
  },
  {
    link: '/work/hoge',
    imgSrc: '/assets/works/github-repo-search.png',
    imgAlt: 'GitHub Repo Search',
    title: 'GitHub Repo Search',
  },
  {
    link: '/work/hoge',
    imgSrc: '/assets/works/blog.png',
    imgAlt: 'ブログ',
    title: 'ブログ',
  },
  {
    link: '/work/hoge',
    imgSrc: '/assets/works/solargraph-docker.png',
    imgAlt: 'solargraph-docker',
    title: 'solargraph-docker',
  },
];
---

<div class="list">
  {
    workList.map(({ link, imgSrc, imgAlt, title }) => (
      <Work link={link} imgSrc={imgSrc} imgAlt={imgAlt} title={title} />
    ))
  }
</div>

<style>
  .list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    align-items: center;
    justify-items: center;
    gap: 2rem;
  }

  @media (width <= 640px) {
    .list {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
  }
</style>
