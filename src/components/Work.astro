---
interface Props {
  link: string;
  imgSrc: string;
  imgAlt: string;
  title: string;
}

const { link, imgSrc, imgAlt, title } = Astro.props;
---

<a href={link}>
  <div class="card">
    <img src={imgSrc} class="image" alt={imgAlt} />
    <h5 class="title">{title}</h5>
  </div>
</a>

<style>
  .card {
    width: 400px;
    height: 300px;
    background: #fff;
    border-radius: 2em;
    box-shadow: 0 4px 4px rgb(0 0 0 / 25%);
    text-align: center;
    overflow: hidden;
  }

  .image {
    width: 100%;
    height: 80%;
    padding: 0;
    border: 0;
    border-bottom: 1px solid #eee;
    aspect-ratio: 1/1;
  }

  .title {
    padding: 12px;
  }
</style>
