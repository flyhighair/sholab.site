---
import { Icon } from 'astro-icon';
---

<header class="nav-header">
  <div class="menu-icons">
    <picture>
      <source
        srcset="/assets/logo_50x50.png"
        type="image/png"
        media="(max-width: 640px)"
      />
      <img src="/assets/logo_70x70.png" alt="翔ラボのロゴ" />
    </picture>
    <button id="menu-button" class="menu-button" aria-label="menu button"
      ><Icon name="tabler:menu-2" /></button
    >
  </div>
  <nav id="menu" class="nav-items">
    <a href="#about" class="nav-item">About</a>
    <a href="#experience" class="nav-item">Experience</a>
    <a href="#skills" class="nav-item">Skills</a>
    <a href="#services" class="nav-item">Services</a>
    <a href="#works" class="nav-item">Works</a>
    <a href="#contact" class="nav-item">Contact</a>
  </nav>
</header>

<style>
  .nav-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background-color: rgb(255 255 255 / 90%);
    height: 80px;
    top: 0;
    backdrop-filter: saturate(180%) blur(5px);
    border-bottom: 1px solid rgb(0 0 0 / 10%);
    transition: transform 0.3s ease-out;
  }

  .hidden {
    transform: translateY(-100%);
    transition: transform 0.3s ease-in;
  }

  .nav-items {
    display: flex;
    justify-content: flex-end;
    width: 100%;
    font-size: 1rem;
  }

  .nav-item {
    padding: 10px;
    list-style: none;
    text-decoration: none;
    color: var(--gray-200);
  }

  .menu-button {
    display: none;
  }

  @media screen and (width <= 640px) {
    .nav-header {
      flex-direction: column;
      height: auto;
      width: 100vw;
    }

    .menu-icons {
      display: flex;
      justify-content: space-between;
      align-items: center;
      width: 100%;
      height: 100%;
    }

    .nav-items {
      display: none;
    }

    .nav-items.shown {
      display: flex;
      flex-direction: column;
      align-items: stretch;
      height: auto;
      font-size: 1.5rem;
      padding: 0;
    }

    .nav-items.shown > .nav-item {
      padding: 20px;
      border-top: 1px solid rgb(0 0 0 / 10%);
    }

    .menu-button {
      display: block;
      width: 50px;
      border: none;
      background-color: transparent;
      cursor: pointer;
    }
  }
</style>

<script>
  const toggleMenu = () => {
    const menu = document.getElementById('menu');
    if (menu === null) {
      return;
    }

    if (menu.classList.contains('shown')) {
      closeMenu(menu);
    } else {
      openMenu(menu);
    }
  };

  const openMenu = (menu: Element) => {
    menu.classList.add('shown');
    document.body.style.overflow = 'hidden';
    document.body.style.position = 'fixed';
  };

  const closeMenu = (menu: Element) => {
    menu.classList.remove('shown');
    document.body.style.overflow = '';
    document.body.style.position = '';
  };

  document.querySelectorAll('a[href^="#"]').forEach((anchor: Element) => {
    anchor.addEventListener('click', function (this: Element, e: Event) {
      e.preventDefault();

      const attr = this.getAttribute('href');
      if (attr === null) {
        return;
      }

      const target = document.querySelector(attr);
      if (target === null) {
        return;
      }

      const menu = document.getElementById('menu');
      if (menu !== null && menu.classList.contains('shown')) {
        closeMenu(menu);
      }
      target.scrollIntoView({
        behavior: 'smooth',
      });
    });
  });

  const menuBtn = document.getElementById('menu-button');
  if (menuBtn !== null) {
    menuBtn.addEventListener('click', toggleMenu);
  }
</script>
