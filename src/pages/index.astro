---
// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import TopImage from '../components/TopImage.astro';
import AboutMe from '../components/AboutMe.astro';
import Experience from '../components/Experience.astro';
import Skills from '../components/Skills.astro';
import Services from '../components/Services.astro';
import Works from '../components/Works.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <Header />
  <main>
    <TopImage />
    <section class="section">
      <h2 id="about" class="section-title">About</h2>
      <div class="about-container">
        <AboutMe />
      </div>
    </section>
    <section class="section">
      <h2 id="experience" class="section-title">Experience</h2>
      <div class="experience-container">
        <Experience />
      </div>
    </section>
    <section class="section">
      <h2 id="skills" class="section-title">Skills</h2>
      <div class="skills-container">
        <Skills />
      </div>
    </section>
    <section class="section">
      <h2 id="services" class="section-title">Services</h2>
      <div class="services-container">
        <Services />
      </div>
    </section>
    <section class="section">
      <h2 id="works" class="section-title">Works</h2>
      <div class="works-container">
        <Works />
      </div>
    </section>
    <section class="section">
      <h2 id="contact" class="section-title">Contact</h2>
      <div class="contact-container">
        <Contact />
      </div>
    </section>
  </main>
  <Footer />
</BaseLayout>

<style>
  .section {
    margin-top: 48px;
  }

  .section-title {
    text-align: center;
  }

  .about-container {
    margin: 8px 64px;
  }

  .experience-container {
    width: 70%;
    margin: 48px auto;
  }

  .skills-container {
    margin: 24px 36px;
  }

  .services-container {
    margin: 0 36px;
  }

  .works-container {
    margin: 24px 36px;
  }

  .contact-container {
    margin: 24px 36px;
  }
</style>
