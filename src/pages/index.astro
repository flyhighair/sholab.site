---
// Layout import â€” provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import TopImage from '../components/TopImage.astro';
import AboutMe from '../components/AboutMe.astro';
import Experience from '../components/Experience.astro';
import Skills from '../components/Skills.astro';
import Services from '../components/Services.astro';
import Works from '../components/Works.astro';
import Contact from '../components/Contact.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <Header />
  <main>
    <TopImage />
    <div class="info-container">
      <section class="section">
        <h2 id="about" class="section-title">About</h2>
        <AboutMe />
      </section>
      <section class="section">
        <h2 id="experience" class="section-title">Experience</h2>
        <Experience />
      </section>
      <section class="section">
        <h2 id="skills" class="section-title">Skills</h2>
        <Skills />
      </section>
      <section class="section">
        <h2 id="services" class="section-title">Services</h2>
        <Services />
      </section>
      <section class="section">
        <h2 id="works" class="section-title">Works</h2>
        <Works />
      </section>
      <section class="section">
        <h2 id="contact" class="section-title">Contact</h2>
        <Contact />
      </section>
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
  .section {
    margin-bottom: 96px;
  }

  .section-title {
    text-align: center;
    margin-bottom: 24px;
  }

  .info-container {
    margin: 48px 64px;
  }
</style>
